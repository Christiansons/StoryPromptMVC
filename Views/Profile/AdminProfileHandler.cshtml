@using StoryPromptMVC.Models.Profile
@model List<ProfileVM>

<h3>Profile Admin Page</h3>
@foreach (var profile in Model)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Profile ID: @profile.Id</h5>
            <p class="card-text">@profile.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">User ID: @profile.UserId</li>
            <li class="list-group-item">Created Date: @profile.ProfileCreated</li>
            <li class="list-group-item">Picture: <img src="@profile.Picture" alt="Profile Picture" class="img-thumbnail" /></li>
        </ul>
        <div class="card-body">
            <a class="btn btn-primary" asp-action="EditProfile" asp-route-profileId="@profile.Id">Edit Profile</a>
            <form asp-action="DeleteProfile" asp-route-profileId="@profile.Id" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Delete Profile</button>
            </form>
        </div>
    </div>
}
