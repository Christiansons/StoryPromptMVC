@using StoryPromptMVC.Models.Profile
@model StoryPromptMVC.Models.Profile.ProfileVM
@{
	var testProfile = new StoryPromptMVC.Models.Profile.ProfileVM
			{
				Id = 1,
				Description = "Test Description",
                Picture = "https://th.bing.com/th/id/OIP.S16MwWFznloeMQVbOE-bugHaEp?rs=1&pid=ImgDetMain",
				ProfileCreated = DateOnly.FromDateTime(DateTime.Now),
				UserId = "12345"
			};
}

<div class="container mt-5">
    <!-- Profile Card -->
    <div class="card text-center shadow-lg p-3 mb-5 bg-white rounded">
        <!-- Profile Picture -->
        <div class="card-body">
            <div class="d-flex justify-content-end">
                <!-- Edit Profile Button -->
                @if (testProfile.UserId == "12345") @* <!-- Replace condition with your logic --> *@
                {
                    <a href="/Profile/EditProfile/@testProfile.UserId" class="btn btn-primary btn-sm">
                        Edit Profile
                    </a>
                }
            </div>
            <div class="d-flex justify-content-center mt-3">
                <div class="profile-picture">
                    <img 
                        src="@testProfile.Picture" 
                        alt="Profile Picture" 
                        class="rounded-circle img-thumbnail" 
                        style="width: 150px; height: 150px; object-fit: cover;" />
                </div>
            </div>
            <!-- Username -->
            <h3 class="mt-3">
                <strong>@testProfile.UserId</strong>
            </h3>
            <!-- Description -->
            <p class="text-muted mt-3">
                @testProfile.Description
            </p>
        </div>
    </div>
</div>
