<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Write your story!</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LandingPage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StoryPromptMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Content/font-awesome.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMJ4E/3zF4h7Btz4IfsE/9Qu97nh8RFR5fMOulj" crossorigin="anonymous">
	<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
	<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body class=".bodybg-color">
    <header class="headerbg">
    <nav class="navbar navbar-expand-sm navbar-light pt-3 pb-3">
        <div class="container-fluid">
            <!-- Mobile View: Collapse Button -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Mobile View: Website Name -->
            <span class="navbar-brand mx-auto d-sm-none">Website Name</span>

            <!-- Mobile View: Book Icon -->
            <a class="navbar-brand d-sm-none" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/profile-icon.svg" alt="Icon" width="40" height="40" />
            </a>

            <!-- Desktop View: Full Navigation -->
            <div class="collapse navbar-collapse">
                <!-- Left Side: Book Icon -->
                <a class="navbar-brand d-none d-sm-inline" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/bookicon.svg" alt="Icon" width="40" height="40" />
                </a>

                <!-- Center: Links -->
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="prompt" asp-action="top">
                            Top prompts
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="prompt" asp-action="new">
                            New prompts
                        </a>
                   
                    <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Prompt" asp-action="Create">

                            Create a prompt
                        </a>
                    </li>
                </ul>

                <!-- Right Side: Profile Link -->
                    <a class="nav-link text-dark d-none d-sm-inline" asp-controller="Profile" asp-action="Details">
                    <img src="~/images/profile-icon.svg" alt="Icon" width="40" height="40" />
                </a>
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted footerBg">
        <div class="container">
            &copy; 2024 - Promptly - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
