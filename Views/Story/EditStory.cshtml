@model StoryPromptMVC.Models.Story.StoryVM

@{
    ViewData["Title"] = "Edit Story";
}

<div class="container mt-5 p-4 rounded" style="background-color: #f7faff; border: 1px solid #dee2e6;">
    <h3 class="text-center font-weight-bold text-dark mb-4">Edit Story</h3>
    <form asp-action="EditStory" method="post">
        <div class="form-group">
            <label asp-for="storyContent" class="font-weight-bold">Story Content:</label>
            <textarea asp-for="storyContent" class="form-control" rows="5" placeholder="Update your story"></textarea>
            <span asp-validation-for="storyContent" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="storyDateCreated" class="font-weight-bold">Date Created:</label>
            <input type="text" asp-for="storyDateCreated" readonly class="form-control-plaintext">
        </div>

        <div class="form-group d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-custom-secondary mr-2">Cancel</a>
            <button type="submit" class="btn btn-custom-primary">Save Changes</button>
        </div>
    </form>
</div>
