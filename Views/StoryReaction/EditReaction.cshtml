@model StoryPromptMVC.Models.StoryReaction.StoryReactionVM

<h3>Edit Reaction</h3>

<form asp-action="EditReaction" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Reaction" class="form-label">Reaction</label>
        <input asp-for="Reaction" class="form-control" />
        <span asp-validation-for="Reaction" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="StoryId" class="form-label">Story ID</label>
        <input asp-for="StoryId" class="form-control" />
        <span asp-validation-for="StoryId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UserId" class="form-label">User ID</label>
        <input asp-for="UserId" class="form-control" />
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
